<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/primero"
    tools:context=".AsignarTutoriaActivity">

    <EditText
        android:id="@+id/editTextCodigoTutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código del Tutor"
        android:textStyle="bold"
        android:textColor="#000000"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextIdEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:hint="ID del Empleado"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAsignar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#240A60"
        android:layout_gravity="center"
        android:text="Asignar Tutoría" />

</LinearLayout>
